[alias]
    find = log --name-status --regexp-ignore-case --grep
    branch-point = merge-base HEAD develop
    diff-branch = diff develop...HEAD
    diff-rebase = diff HEAD...develop
    log-rebase = log --name-status HEAD..develop
    purge = !git reset --hard && git clean -f -d && git pull && git remote prune origin && git gc --aggressive

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    showbranch = auto
    status = auto

[color "branch"]
    current = green
    local = yellow

[core]
    pager = less -r
    quotepath = false

[format]
    pretty = my
    signature = ""

[gitflow "prefix"]
    feature = feature/
    release = release/
    hotfix = hotfix/
    support = support/
    versiontag =

[grep]
    extendedRegexp = true

[log]
    date = iso
    decorate = short

[pretty]
    my = format:%C(bold green)%H %C(bold blue)%s%C(bold yellow)%d%n  %C(dim white)Author: %C(bold cyan)%an <%ae>%n    %C(dim white)Date: %C(bold cyan)%ad%C(bold white)%n

[push]
    default = current

[status]
    relativePaths = true
    showUntrackedFiles = all

[user]
    name = Alex Howansky
    email = alex.howansky@gmail.com
